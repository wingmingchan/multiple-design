<system-data-structure>
    <text default="designer-pro-block" identifier="block-type" label="Block type" restrict-to-groups="wing"/>
    <text default="yes" help-text="Select yes to display" identifier="display" label="Display" type="radiobutton">
        <radio-item value="yes"/>
        <radio-item value="no"/>
    </text>
    <text default="homepage-slideshow" help-text="Select a block type" identifier="choose-type" label="Choose A Type" required="true" type="radiobutton">
        <radio-item show-fields="homepage-slideshow-group" value="homepage-slideshow"/>
    </text>
    <text default="top-inner" help-text="Select a region to display the contents" identifier="choose-region" label="Choose A Region" type="radiobutton">
        <radio-item value="top-inner"/>
        <radio-item value="top-outer"/>
    </text>
    <!-- slide-show -->
    <group identifier="homepage-slideshow-group" label="Homepage Slideshow">
        <text identifier="advanced" label="Show Advanced" type="checkbox">
            <checkbox-item show-fields="homepage-slideshow-group/srcSetYes, homepage-slideshow-group/large-suffix, homepage-slideshow-group/medium-suffix, homepage-slideshow-group/small-suffix, homepage-slideshow-group, homepage-slideshow-group/subheadlineYes, homepage-slideshow-group/caption-class" value="Yes"/>
        </text>
        <text identifier="srcSetYes" label="Use scrset?" type="checkbox">
            <checkbox-item checked="true" show-fields="homepage-slideshow/large-suffix, homepage-slideshow/medium-suffix, homepage-slideshow/small-suffix" value="Yes"/>
        </text>
        <text identifier="large-suffix" label="Large Suffix (default none)"/>
        <text default="-700x233" identifier="medium-suffix" label="Medium Suffix"/>
        <text default="-400x133" identifier="small-suffix" label="Small Suffix"/>
        <text default="flexslider-hp-caption pull-right col-xs-12 col-sm-5 col-sm-4 pad5" identifier="caption-class" label="Caption Class"/>
        <text identifier="subheadlineYes" label="headline and subheadline caption format" type="checkbox">
            <checkbox-item checked="true" value="Yes"/>
        </text>
        <group identifier="image" maximum-number="6" minimum-number="2" multiple="true">
            <asset identifier="selectimage" label="Select Large Image" required="true" type="file"/>
            <text identifier="caption-yes" label="Caption" type="checkbox">
                <checkbox-item checked="true" show-fields="homepage-slideshow/image/subheadline" value="Yes"/>
            </text>
            <text identifier="altText" label="Title and alt text" required="true"/>
            <text identifier="subheadline" label="Caption Subheadline"/>
            <asset identifier="image-link" label="Optional: link" type="page,file,symlink"/>
        </group>
    </group>
</system-data-structure>