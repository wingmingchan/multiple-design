<system-data-structure>
    <text default="row" identifier="block-type" label="Block type" restrict-to-groups="wing"/>
    <text default="yes" help-text="Select yes to display" identifier="display" label="Display" required="true" type="radiobutton">
        <radio-item value="yes"/>
        <radio-item value="no"/>
    </text>
    <group identifier="row-group" label="Row Group">
        <text identifier="background-classes" label="Background Classes"/>
        <text identifier="row-header" label="Row Header"/>
        <text identifier="options" label="Options" type="checkbox">
            <checkbox-item value="centered header"/>
            <checkbox-item value="full width"/>
            <checkbox-item value="even column"/>
            <checkbox-item value="padding"/>
            <checkbox-item value="margin"/>
            <checkbox-item value="bottom spacing"/>
            <checkbox-item value="bottom hr"/>
        </text>
        <asset identifier="row-block-chooser" label="Block Chooser" maximum-number="4" minimum-number="2" multiple="true" render-content-depth="5" type="block"/>
    </group>
</system-data-structure>